<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorBackgroundWhite"
    android:paddingStart="@dimen/margin_default"
    android:paddingEnd="@dimen/margin_default"
    tools:context=".ui.activity.MainActivity">

    <com.sungbin.sungbintool.ui.TagableRoundImageView
        android:id="@+id/iv_actor"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:triv_imageRadius="@dimen/margin_twice_and_half"
        tools:src="@color/colorGreen" />


    <View
        android:id="@+id/v_top"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_actor"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="2dp" />

    <View
        android:id="@+id/v_center"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorGreen"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_actor"
        app:layout_constraintStart_toEndOf="@+id/iv_actor"
        app:layout_constraintTop_toTopOf="@+id/iv_actor"
        tools:layout_height="2dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_twice"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/v_center"
        app:layout_constraintStart_toEndOf="@+id/iv_actor"
        app:layout_constraintTop_toTopOf="@+id/iv_actor"
        tools:text="@string/chat_preview_name" />

    <TextView
        android:id="@+id/tv_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_twice"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:maxLines="1"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="13sp"
        tools:drawableStartCompat="@drawable/ic_outline_photo_24"
        app:layout_constraintBottom_toBottomOf="@+id/iv_actor"
        app:layout_constraintStart_toEndOf="@+id/iv_actor"
        app:layout_constraintTop_toBottomOf="@+id/v_center"
        tools:text="@string/chat_preview_last_message" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_actor"
        tools:text="@string/chat_preview_time" />

    <TextView
        android:id="@+id/tv_unread_counter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        tools:text="7"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/ic_baseline_lens_24"
        app:layout_constraintBottom_toBottomOf="@+id/iv_actor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_last_message" />

</androidx.constraintlayout.widget.ConstraintLayout>