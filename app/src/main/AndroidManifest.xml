<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.sungbin.spakchat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SpakChat"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:fullBackupOnly="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/SpakChat"
        android:usesCleartextTraffic="true"
        tools:targetApi="q">

        <activity
            android:name=".ui.activity.SplashActivity"
            android:theme="@style/SpakChat.NoActionBar.WhiteStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.JoinActivity"
            android:theme="@style/SpakChat.FullScreen" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/SpakChat.Main.WhiteStatusBar" />

        <activity
            android:name=".ui.activity.chat.ChatActivity"
            android:theme="@style/SpakChat.Chat.WhiteStatusBar" />

        <activity
            android:name=".ui.activity.DetailImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SpakChat.DetailImageActivity" />

        <activity
            android:name=".ui.activity.ExceptionActivity"
            android:theme="@style/SpakChat.NoActionBar" />

        <activity
            android:name=".ui.activity.ProfileEditActivity"
            android:theme="@style/SpakChat.FullScreen" />

        <meta-data
            android:name="com.samsung.android.icon_container.has_icon_container"
            android:value="true" />

    </application>

</manifest>